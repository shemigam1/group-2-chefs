generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model User {
  id               String   @id @default(uuid())
  username         String   @unique @db.VarChar
  email            String   @unique @db.VarChar
  password         String   @db.VarChar
  profile_pic      String?  @db.VarChar
  bio              String?  @db.VarChar
  cooking_skill_level String? @db.VarChar
  created_at       DateTime @default(now()) @db.Timestamp
  updated_at       DateTime @updatedAt @db.Timestamp
  is_deleted       Boolean @default(false)

  recipes          Recipe[]
  favouriteRecipes FavouriteRecipe[]
  reviews          RecipeReview[]

  @@index([is_deleted])
}

model Recipe {
  id               String   @id @default(uuid())
  userId           String
  title            String   @db.VarChar
  description      String?  @db.VarChar
  ingredients      String[]
  instructions     String[]
  cuisine_type     String[]
  final_img        String?  @db.VarChar
  difficulty_level String?  @db.VarChar
  prep_time        Int?
  cook_time        Int?
  tags             String[]
  is_deleted       Boolean  @default(false)
  created_at       DateTime @default(now()) @db.Timestamp
  updated_at       DateTime @updatedAt @db.Timestamp

  user             User     @relation(fields: [userId], references: [id],onDelete: Cascade)
  reviews          RecipeReview[]
  favouriteRecipes FavouriteRecipe[]

  @@index([userId])
  @@index([is_deleted])
}

model FavouriteRecipe {
  id        String   @id @default(uuid())
  userId    String
  recipeId  String
  createdAt DateTime @default(now()) @db.Timestamp
  updatedAt DateTime @updatedAt @db.Timestamp

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe    Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([userId, recipeId])
}

model RecipeReview {
  id            String   @id @default(uuid())
  userId        String
  recipeId      String
  rating        Int      @db.SmallInt  // 1-5 stars
  comment       String?  @db.VarChar(500)  // Max 500 chars, optional
  helpful_count Int      @default(0)  // For future "helpful" votes
  is_flagged    Boolean  @default(false)  // For moderation
  flag_reason   String?  @db.VarChar  // Why it was flagged
  created_at    DateTime @default(now()) @db.Timestamp
  updated_at    DateTime @updatedAt @db.Timestamp

  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  recipe        Recipe   @relation(fields: [recipeId], references: [id], onDelete: Cascade)

  @@unique([userId, recipeId])  // One review per user per recipe
  @@index([userId])
  @@index([recipeId])
  @@index([is_flagged])  // For moderation queries
  @@index([rating])  // For sorting by rating
}
